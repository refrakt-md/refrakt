{
  "name": "refrakt-md",
  "description": "A content framework built on Markdoc",
  "private": true,
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/refrakt-md/refrakt.git"
  },
  "bugs": "https://github.com/refrakt-md/refrakt/issues",
  "homepage": "https://github.com/refrakt-md/refrakt",
  "scripts": {
    "build": "npm run build -w packages/types -w packages/create-refrakt && npm run build -w packages/runes -w packages/sveltekit && npm run build -w packages/content -w packages/ai && npm run build -w packages/cli",
    "test": "vitest run",
    "test:watch": "vitest",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.2.3",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  },
  "workspaces": [
    "packages/*",
    "themes/*",
    "site"
  ]
}
