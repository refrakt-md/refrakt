{
	"name": "refrakt-md",
	"displayName": "refrakt.md",
	"description": "Syntax highlighting, snippets, and editor support for refrakt.md content authoring with Markdoc runes.",
	"version": "0.4.0",
	"publisher": "refrakt-md",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/refrakt-md/refrakt.git",
		"directory": "packages/vscode"
	},
	"main": "./dist/extension.js",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"markdoc",
		"markdown",
		"refrakt",
		"runes",
		"content"
	],
	"contributes": {
		"languages": [
			{
				"id": "markdown",
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"scopeName": "text.html.markdown.refrakt",
				"path": "./syntaxes/refrakt.tmLanguage.json",
				"injectTo": [
					"text.html.markdown"
				]
			}
		],
		"snippets": [
			{
				"language": "markdown",
				"path": "./snippets/runes.json"
			}
		],
		"configurationDefaults": {
			"[markdown]": {
				"editor.wordWrap": "on"
			}
		},
		"views": {
			"explorer": [
				{
					"id": "refraktRuneInspector",
					"name": "Rune Inspector",
					"when": "resourceLangId == markdown"
				}
			]
		},
		"commands": [
			{
				"command": "refrakt.inspectRune",
				"title": "Inspect Rune at Cursor",
				"category": "Refrakt"
			},
			{
				"command": "refrakt.copyInspectorNode",
				"title": "Copy as JSON",
				"icon": "$(copy)"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "refrakt.copyInspectorNode",
					"when": "viewItem == inspectorNode",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node && esbuild ../language-server/dist/server.js --bundle --outfile=dist/server.js --format=cjs --platform=node",
		"watch": "npm run build -- --watch",
		"package": "vsce package --no-dependencies"
	},
	"dependencies": {
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"@types/vscode": "^1.85.0",
		"@vscode/vsce": "^3.0.0",
		"esbuild": "^0.25.0"
	}
}
